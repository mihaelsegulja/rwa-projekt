@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="position-absolute top-0 start-0 w-100 h-100"
         style="background: url('/assets/images/home_image.jpg') center no-repeat; opacity: 0.3; z-index: -1;">
    </div>
    <div class="d-flex align-items-center justify-content-center h-100">
        <div class="bg-white p-5 rounded shadow text-center">
            <h1 class="display-5 mb-3">DIY Project Sharing Platform</h1>
            <p class="lead text-muted">Browse, create and disguss do-it-yourself ideas with the community.</p>
            <a asp-controller="Project" class="btn btn-outline-primary btn-lg mt-3">
                <i class="bi bi-collection"></i> Browse Projects
            </a>
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <a asp-controller="Project" asp-action="Create" class="btn btn-outline-success btn-lg mt-3">
                    <i class="bi bi-plus-lg"></i> Create Project
                </a>
            }
        </div>
    </div>
</div>